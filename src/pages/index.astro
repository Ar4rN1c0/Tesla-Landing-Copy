---
import Layout from '../layouts/Layout.astro';
import LandingHeader from '../components/LandingHeader.astro'
import HeroSection from '../components/HeroSection.astro'
import ChargeSection from '../components/ChargeSection.astro'
import ModelX from '../components/ModelX.astro';
---

<Layout title="Tesla">
	<LandingHeader />

	<main class="snap-y snap-mandatory scroll-smooth overflow-y-auto overflow-x-hidden relative w-full h-screen">

		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ModelX />
		</div>
		<div class="snap-center">
			<ChargeSection />
		</div>

	</main>
</Layout>